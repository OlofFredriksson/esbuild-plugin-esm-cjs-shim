{
    "compilerOptions": {
        "rootDir": "./src",
        "esModuleInterop": true,
        "module": "CommonJS",
        "noImplicitAny": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "target": "ES2022",
        "strict": true,
        "noEmit": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
